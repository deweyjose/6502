FROM ubuntu:22.04

# Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    libusb-1.0-0-dev \
    pkg-config \
    zlib1g-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /opt/cc65   

# Clone and build cc65
RUN git clone --quiet https://github.com/cc65/cc65.git . \
    && make     

WORKDIR /workspace

# Set the default command
ENTRYPOINT ["/opt/cc65/bin/ca65"]
CMD ["--help"] 